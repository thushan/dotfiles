" 2008-01-08 Settings for vimps (gavinc)
set shortmess=atI
set title

set nocompatible
set backspace=indent,eol,start
set backupskip=/tmp/*
set binary
set clipboard=unnamed
set cursorline
set encoding=utf-8 nobomb
set esckeys

set gdefault

set hlsearch
set ignorecase
set incsearch

set laststatus=2

set mouse=a

set noeol
set noerrorbells
set nostartofline

set number
set ruler

set tabstop=2
set ttyfast
set wildmenu
syntax on

